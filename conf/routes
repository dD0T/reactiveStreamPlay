# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                    controllers.Application.overview
GET        /flow                controllers.Application.flow
GET        /add                 controllers.Application.add(nodetype: String, x: Int, y: Int)
GET        /connect             controllers.Application.connect(sourceId: Long, targetId: Long)
GET        /disconnect          controllers.Application.disconnect(sourceId: Long, targetId: Long)
GET        /events              controllers.Application.events
GET        /reset               controllers.Application.reset
POST       /node/:id            controllers.Application.postNode(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file        controllers.Assets.at(path="/public", file)
